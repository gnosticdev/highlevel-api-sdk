  "$defs": {
    "HttpMethod": {
      "type": "string",
      "enum": [
        "DELETE",
        "GET",
        "PATCH",
        "POST",
        "PUT"
      ]
    },
    "WebhookEventName": {
      "type": "string",
      "enum": [
        "CampaignStatusUpdate",
        "ContactCreate",
        "ContactDelete",
        "ContactDndUpdate",
        "ContactTagUpdate",
        "ConversationProviderOutboundMessage",
        "ConversationUnreadWebhook",
        "InboundMessage",
        "LocationCreate",
        "LocationUpdate",
        "NoteCreate",
        "NoteDelete",
        "OpportunityCreate",
        "OpportunityDelete",
        "OpportunityMonetaryValueUpdate",
        "OpportunityStageUpdate",
        "TaskCreate",
        "TaskDelete",
        "Webhook Events"
      ]
    },
    "EndpointRef": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "method",
        "path"
      ],
      "properties": {
        "method": {
          "$ref": "#/$defs/HttpMethod"
        },
        "path": {
          "type": "string"
        }
      }
    },
    "ScopeInfo": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "endpoints",
        "webhookEvents"
      ],
      "properties": {
        "endpoints": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/EndpointRef"
          }
        },
        "webhookEvents": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/WebhookEventName"
          },
          "uniqueItems": true
        }
      }
    }
  }
